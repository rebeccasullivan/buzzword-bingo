<div class="row">
	<div class="col-sm-8">
		<h3>Recent Posts</h3>
		
		{{#each blogPosts}}
		<div class="card card-blog">
			<img class="card-img-top" src="http://placehold.it/750x300">
			<div class="card-body-blog blog-post">
				<h4 class="card-title-blog">{{this.fields.title}}</h4>
				<p class="card-text">{{this.fields.bodyCopy}}</p>
				<a href="blog/{{this.fields.entrySlug}}" class="btn btn-primary">Read More &rarr;</a>
			</div>
			<div class="card-footer text-muted">
			Posted on {{this.fields.datePublished}}
			</div>
		</div>
		{{/each}}
	</div>
	
	<!-- Sidebar Widgets Column -->
	<div class="col-sm-4">
	     <!-- Search Widget -->
	     <div class="card card-blog">
	       <h5 class="card-header">Search</h5>
	       <div class="card-body-blog">
	         <div class="input-group">
	           <input type="text" class="form-control" placeholder="Search for...">
	           <span class="input-group-btn">
	             <button class="btn btn-secondary" type="button">Go!</button>
	           </span>
	         </div>
	       </div>
	     </div>

	     <!-- Categories Widget -->
	     <div class="card card-blog">
	       <h5 class="card-header">Categories</h5>
	       <div class="card-body-blog">
	         <div class="row">
	           <div class="col-lg-6">
	             <ul class="list-unstyled mb-0">
	               <li>
	                 <a href="#">Career</a>
	               </li>
	             </ul>
	           </div>
	           <div class="col-lg-6">
	             <ul class="list-unstyled mb-0">
	               <li>
	                 <a href="#">JavaScript</a>
	               </li>
	               <li>
	                 <a href="#">CSS</a>
	               </li>
	             </ul>
	           </div>
	         </div>
	       </div>
	     </div>

	     <!-- Side Widget -->
	     <div class="card card-blog">
	       <h5 class="card-header">Side Widget</h5>
	       <div class="card-body-blog">
	         You can put anything you want inside of these side widgets. They are easy to use!
	       </div>
	     </div>
	</div>
</div>
<div class="row">
	<p>Blog powered by: Contentful API and CMS, Handlebars.js, Node.js</p>
</div>